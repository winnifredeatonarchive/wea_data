<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0" xml:id="${cfn}">
  <teiHeader>
      <fileDesc>
         <titleStmt>
            <title>${ask('What is the title of this document?', string, '', @title)}</title>
            <respStmt>
               <resp>Author</resp>
               <name ref="pers:WE">Winnifred Eaton</name>
            </respStmt>
            <respStmt>
               <resp>Transcriber</resp>
               <name ref="pers:${ask('Transcriber',radio,('SE':'S. Ehrhart';'MC':' Mary Chapman Mary Chapman ';'JLC':'Jean Lee Cole';'SL':'Sydney Lines';'KI':'Ken Ip';'JT':'Joey Takeda'),'SE', @transcriber)}"/>
            </respStmt>
            <respStmt>
               <resp>Copy Editor</resp>
               <name ref="pers:${ask('Copy Editor',radio,('SE':'S. Ehrhart';'MC':' Mary Chapman Mary Chapman ';'JLC':'Jean Lee Cole';'SL':'Sydney Lines';'KI':'Ken Ip';'JT':'Joey Takeda'),'SE', @copyeditor)}"/>
            </respStmt>
            <respStmt>
               <resp>Encoder</resp>
               <name ref="pers:${ask('Encoder',radio,('SE':'S. Ehrhart';'MC':' Mary Chapman Mary Chapman ';'JLC':'Jean Lee Cole';'SL':'Sydney Lines';'KI':'Ken Ip';'JT':'Joey Takeda'),'SE', @encoder)}"/>
            </respStmt>
         </titleStmt>
         <publicationStmt>
            <p>Publication Information</p>
         </publicationStmt>
         <sourceDesc>
            <bibl><!--Encode bibliographic citation for the source here--></bibl>
         </sourceDesc>
      </fileDesc>
     <profileDesc>
        <textClass>
           <catRef scheme="wdt:docType"
                    target="wdt:${ask('Document Type',radio,('docPrimarySource':'Primary Source';'docPrimarySourceMS':'Primary Source in Manuscript';'docPrimarySourcePublished':'Published Primary Source';'docBornDigital':'Born Digital document'),'docPrimarySource', @doctype)}"/>
           <catRef scheme="wdt:genre"
                    target="wdt:${ask('Genre',radio,('genreShortStory':'Short Story';'genreNF':'Non-fiction';'genreNFAuto':'Non-fiction: Autobiography';'genreNFDedication':'Non-fiction: Dedication';'genreNFInterview':'Non-Fiction: Interview';'genreNFIntroduction':'Non-fiction: Introduction';'genreNFEthnography':'Non-fiction: Ethnography';'genreFilm':'Film';'genreFilmScenario':'Film: Scenario';'genreFilmTreatment':'Film: Treatment';'genrePoem':'Poem';'genreNovel':'Novel';'genreNovelSerial':'Novel: Serial'),'genreShortStory', @genre)}"/>
           <catRef scheme="wdt:category"
                    target="wdt:${ask('Category',radio,('catJapan':'Japan';'catAlberta':'Alberta';'catHollywood':'Hollywood';'catEarlyExperiment':'Early Experiments';'catNewYork':'New York'),'catJapan', @category)}"/>
        </textClass>
     </profileDesc>
     <revisionDesc>
        <change when="${xpath_eval(format-date(current-date(),'[Y0001]-[M01]-[D01]'))}"
                 who="pers:${answer(@encoder)}">Created file.</change>
     </revisionDesc>
  </teiHeader>
  <text>
      <body>
         <p>Some text here.</p>
      </body>
  </text>
</TEI>
